<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/rlListingItem"
    android:paddingBottom="@dimen/activity_vertical_margin" >

    <ImageView
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:id="@+id/ivHouseImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#000000"
        android:padding="0dp"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:id="@+id/tvTitle"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivHouseImage"
        android:layout_toEndOf="@+id/ivHouseImage"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:id="@+id/tvAddress"
        android:layout_below="@+id/tvTitle"
        android:layout_toRightOf="@+id/ivHouseImage"
        android:layout_toEndOf="@+id/ivHouseImage"
        android:autoLink="all"
        android:linksClickable="true"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="價錢"
        android:id="@+id/textView6"
        android:layout_below="@+id/tvAddress"
        android:layout_toRightOf="@+id/ivHouseImage"
        android:layout_toEndOf="@+id/ivHouseImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="100"
        android:id="@+id/tvPrice"
        android:layout_alignTop="@+id/textView6"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6"
        android:paddingLeft="1dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="熱度"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView6"
        android:layout_toRightOf="@+id/ivHouseImage"
        android:layout_toEndOf="@+id/ivHouseImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="5"
        android:id="@+id/tvPageview"
        android:layout_alignTop="@+id/textView8"
        android:layout_toRightOf="@+id/textView8"
        android:layout_toEndOf="@+id/textView8"
        android:paddingLeft="1dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="面積"
        android:id="@+id/textView7"
        android:layout_below="@+id/tvAddress"
        android:layout_toRightOf="@+id/tvPrice"
        android:layout_toEndOf="@+id/tvPrice"
        android:paddingLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="30坪"
        android:id="@+id/tvArea"
        android:layout_above="@+id/tvPageview"
        android:layout_toRightOf="@+id/textView7"
        android:layout_toEndOf="@+id/textView7"
        android:paddingLeft="1dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="屋齡"
        android:id="@+id/textView10"
        android:layout_alignBottom="@+id/tvPageview"
        android:layout_toRightOf="@+id/tvPageview"
        android:layout_toEndOf="@+id/tvPageview"
        android:paddingLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="30年"
        android:id="@+id/tvAge"
        android:layout_alignBottom="@+id/textView10"
        android:layout_toRightOf="@+id/textView10"
        android:layout_toEndOf="@+id/textView10"
        android:paddingLeft="1dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="房間數"
        android:id="@+id/textView9"
        android:layout_alignBottom="@+id/tvAge"
        android:layout_toRightOf="@+id/tvAge"
        android:layout_toEndOf="@+id/tvAge"
        android:paddingLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="2"
        android:id="@+id/tvRoom"
        android:layout_alignBottom="@+id/textView9"
        android:layout_toRightOf="@+id/textView9"
        android:layout_toEndOf="@+id/textView9"
        android:paddingLeft="1dp"/>


</RelativeLayout>
